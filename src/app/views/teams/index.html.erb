<% content_for :equivalent_url_in_iframe, '/map/account/teams' %>

<div class="s-overlay--your-account--teams is-showing">
    <div class="m-account-page">
        <% if @teams.any? %>
        <div class="section">
            <h2>Your teams</h2>
            <ul>
                <%= render partial: "team", collection: @teams %>
            </ul>
        </div>
        <% end %>
        <% if policy(Team).join? %>
            <div class="section">
                <h2>Join a team</h2>
                <%# render 'form_join_team' %>

            </div>
        <% end %>
        <% if policy(Team).new? %>
            <div class="section">
                <h2>Create a new team</h2>
                <%= render 'teams/forms/create_team', team: @team %>
            </div>

        <% end %>

        
    </div>
</div>