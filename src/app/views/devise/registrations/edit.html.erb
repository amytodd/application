<div class="m-account-page m-account-page--details" style="padding:0px">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'form--chunky form--over-white' }) do |f| %>

    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :email %>
      <%= f.text_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="form-group form-group--description">
      <%= f.label :description %>
      <%= f.text_area(:description, size: '0x10') %>
    </div>

    <div class="form-group form-group--profile-pic">
      <%= f.label :profile_pic %>
      <div class="image" >
        <%= image_tag(url_for(@user.avatar), style: 'width:200px') %>
        <%= f.file_field :avatar %>
      </div>
    </div>

    <div class="form-group form-group--single-checkbox">
      <p class="helper-text">Allow users to contact you</p>
      <label>
        <%= f.check_box :contact_me %>
        <span>If this box is checked other users will be able to send you a message via email - from links on your records and collections. Your email address will not be shared. </span>
      </label>
    </div>

    <div class="form-group">
      <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i>
      <%= f.password_field :current_password, autocomplete: "off" , style: 'background: #f5f2f7' %>
    </div>

    <div class="form-group actions">
      <label>Save changes</label>
      <button type="submit">Save</button>
    </div>

    <div class="form-group">
      <label>Change my password</label>
      <button>Change my password</button>
    </div>

    <div class="form-group">
      <label>Delete account</label>
      <%= button_to  registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete do %>
        Delete account
      <% end %>
    </div>
  <% end %>
</div>