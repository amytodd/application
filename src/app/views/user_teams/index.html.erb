<div class="s-overlay--your-account--teams is-showing">


  <div class="m-account-page">

    <div class="section">
      <h2>Your teams</h2>
      <ul>
        <% @teams.each do |team| %>

          <li><a href="#" class="teamlink-member"><%= team.name %></a>
          </li>
<!--          # TODO: check owner-->
<!--          <li><a href="#" class="teamlink-owner"><%#= team.name %>-->
<!--            </a><span class="ownership-indicator">Owner</span>-->
<!--          </li>          -->
        <% end %>

      </ul>
    </div>

    <div class="section">
      <h2>Join a team</h2>
      <%= render 'form_join_team', team: @team %>
    </div>

    <div class="section">
      <h2>Create a new team</h2>
      <%= render 'form_create_team', team: @team %>
    </div>

  </div>

</div>