<% content_for :template do %>

<div class="m-page-hero">
    <div class="text-content">
        <h1>Blog</h1>
    </div>
</div>

<main class="main--content">

    <div class="back-to-blog">
        <%= link_to "Back to all articles", "/blog" %>
    </div>

    <div class="m-content-area">

        <div class="m-blog-article-title">
            <h1><%= post.title %></h1>
        </div>

        <div class="m-blog-article-meta">
            <p>By <%= post.author_name %> | <%= post.date.strftime("#{post.date.day.ordinalize} %B '%y") %></p>
        </div>

        <div class="m-article">
            <%= parse_content(post.fields.content).html_safe %>
        </div>
        
    </div>

</main>

<div class="m-wrap m-wrap--green">
    <% if @latest_articles[0] %>
        <div class="m-blog-highlights">
            <h3>Latest insights from the blog</h3>

            <h4><%= @latest_articles[0].title %></h4>
            <p><%= @latest_articles[0].excerpt %></p>

            <a class="button" href="/blog">Read more blog posts</a>
        </div>
    <% end %>
    <%= render 'shared/latest_pins' %>
</div>

<% end %>

<%= render template: "layouts/application" %>
