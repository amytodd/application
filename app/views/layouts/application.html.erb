<!DOCTYPE html>
<html>
<head>
    <%= render partial: "global/rollbar" %>
    <title>Layers of London</title>
    <% if content_for?(:stylesheet) %>
    <%= yield :stylesheet %>
    <% else %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <% end %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet">

    <%= render partial: 'global/meta_tags' %>

    <%= render partial: "global/bugmuncher" %>

    <!-- Favicon -->
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" href="/favicon-32x32.png" sizes="32x32">
    <link rel="icon" type="image/png" href="/favicon-16x16.png" sizes="16x16">
    <link rel="manifest" href="/manifest.json">
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#333333">
    <meta name="theme-color" content="#35f5c8">

</head>
<body>

    <div class="site-wrapper">

        <%= content_for?(:header) ? yield(:header) : (render 'global/header') %>
        <%= render 'global/notices' %>

        <%= content_for?(:template) ? yield(:template) : yield %>

        <%= render 'global/footer' %>

    </div>

    <%= yield(:javascript) %>

</body>
</html>
